generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Surgery {
  id                Int          @id @default(autoincrement())
  patientName       String
  age               Int?
  gender            String?
  surgeryName       String
  surgeryDate       DateTime
  surgeryType       PaymentType  // âœ… use enum for safety
  donorName         String?      // Only for FUNDED
  donorAmount       Float?
  hospitalAmount    Float?       // Only for SUBSIDIZED
  patientAmount     Float?       // Only for SUBSIDIZED
  totalAmount       Float?       // For PAID
  notes             String?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  @@map("surgeries")
}

enum PaymentType {
  PAID
  FUNDED
  SUBSIDIZED
}
